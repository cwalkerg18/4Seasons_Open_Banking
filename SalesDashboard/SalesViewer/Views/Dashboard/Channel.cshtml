@{
    ViewBag.Header = "Revenue by Channels";
    ViewBag.PageId = "Dashboard";
    ViewBag.Title = "Channels";
}


<div class="white">
    <div class="page">
        <div class="layout-box">
            <div class="content right-padding">

                @Html.Partial("_HeaderWithLegend", "Revenue by Sales Channels")
                <div class="hb-5">
                    <div class="lb-4 nopadding">
                        <div class="performance-title indent">DAILY SUMMARY</div>


                        <div class="vars">
                            <div class="row">
                                <div class="name">Direct</div>
                                <div id="dailyDirect">Loading..</div>
                            </div>
                            <div class="row">
                                <div class="name">VARs</div>
                                <div id="dailyVARs">Loading..</div>
                            </div>
                            <div class="row">
                                <div class="name">Consultants</div>
                                <div id="dailyConsultants">Loading..</div>
                            </div>
                            <div class="row">
                                <div class="name">Resellers</div>
                                <div id="dailyResellers">Loading..</div>
                            </div>
                            <div class="row">
                                <div class="name">Retail</div>
                                <div id="dailyRetail">Loading..</div>
                            </div>
                            <div class="row total">
                                <div class="name">Total</div>
                                <div id="dailyTotal">Loading..</div>
                            </div>
                        </div>


                    </div>

                    <div class="lb-6 nopadding right-indent">
                        <div class="performance-title indent daily-sales">DAILY SALES PERFORMANCE</div>
                        <div id="switcher" class="switcher"></div>
                        <div id="chart-channelsperformance" class="left-indent"></div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

@Html.Partial("_DashboardBottom", (string)ViewBag.Title.ToLower())

@section descriptionTextForPopup{

    <p>Deliver elegant, high performance user experiences across all HTML&nbsp;5&nbsp;–&nbsp;enabled web browsers.</p>

    <p>Widgets showcased on this page:</p>

    <p><a target="_blank" href="http://js.devexpress.com/Documentation/ApiReference/Data_Visualization_Widgets/dxChart/Series_Types/LineSeries"><b>Line Series Chart</b></a> - used to display changes in sales volume throughout the course of business day for each sales channel.</p>

    <p><b><a target="_blank" href="http://js.devexpress.com/Documentation/ApiReference/Data_Visualization_Widgets/dxPieChart/Series_Types/DoughnutSeries">Doughnut</a> and <a target="_blank" href="http://chartjs.devexpress.com/Documentation/ApiReference/dxChart/Series_Types/BarSeries">Bar</a> Charts</b> - used to compare revenues generated by each sales channel.</p>

    <p><a target="_blank" href="http://js.devexpress.com/Documentation/ApiReference/Data_Visualization_Widgets/dxRangeSelector/"><b>Range Control</b></a> – used to visually specify date range parameters. A line chart within the widget illustrates sales patterns over time.</p>


}
