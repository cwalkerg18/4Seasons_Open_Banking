@model String
@{
    ViewBag.Header = "Financial Health";
    ViewBag.PageId = "Dashboard";
    ViewBag.Title = "Criteria";
    var lowerModel = @Model.ToLower();
    ViewBag.criteria = lowerModel;
    var dataName = lowerModel == "sectors" ? "sector" : "product";
    var preposition = lowerModel == "sectors" ? "in" : "of";
}

<div class="white">
    <div class="content right-padding">
        <div class="page">
            <div class="layout-box">
                @Html.Partial("_HeaderWithLegend", (string)ViewBag.Header)
                <div class="hb-5">
                    <div class="lb-7">
                        <div class="performance-title indent criteria">DAILY SALES PERFORMANCE</div>
                        <div class="indent line">
                            <div class="parameters">
                                Today
                                <div class="parameter" id="TodaySales">0</div>
                            </div>
                            <div class="parameters">
                                Yesterday
                                <div class="parameter" id="YesterdaySales">0</div>
                            </div>
                            <div class="parameters">
                                Last Week
                                <div class="parameter" id="LastWeekSales">0</div>
                            </div>
                        </div>
                        <div id="daySwitcher" class="switcher sector"></div>
                        <div id="chart-@(lowerModel)sales" class="left-indent"></div>
                    </div>
                    <div class="lb-7">
                        <div class="performance-title indent params-indent criteria">UNIT SALES BY @Model.Substring(0, @Model.Length - 1).ToUpper()</div>
                        <div class="indent params-indent line">
                            <div class="parameters">
                                This Month
                                <div class="parameter" id="ThisMonthUnits">0</div>
                            </div>
                            <div class="parameters">
                                Last Month
                                <div class="parameter" id="LastMonthUnits">0</div>
                            </div>
                            <div class="parameters">
                                YTD
                                <div class="parameter" id="YtdUnits">0</div>
                            </div>
                        </div>
                        <div id="monthSwitcher" class="switcher sector month"></div>
                        <div id="chart-@(lowerModel)units"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@Html.Partial("_DashboardBottom", lowerModel)

@if (lowerModel == "sectors") { 
    @section descriptionTextForPopup{
        <p>Construct flexible and fully customizable web apps for real-time data consumption and analysis.</p>

        <p>Widgets showcased on this page:</p>

        <p><b><a target="_blank" href="http://js.devexpress.com/Documentation/ApiReference/Data_Visualization_Widgets/dxPieChart/Series_Types/DoughnutSeries">Doughnut</a> and <a target="_blank" href="http://chartjs.devexpress.com/Documentation/ApiReference/dxChart/Series_Types/BarSeries">Bar</a> Charts</b> - used to compare revenues generated by each business sector.</p>

        <p><a target="_blank" href="http://js.devexpress.com/Documentation/ApiReference/Data_Visualization_Widgets/dxRangeSelector/"><b>Range Control</b></a> – used to visually specify date range parameters. A line chart within the widget illustrates sales patterns over time. </p> 
    }
} else {
    @section descriptionTextForPopup{

        <p>Build powerful decision support systems with DevExpress HTML&nbsp;5 data visualization widgets.</p>

        <p>Widgets showcased on this page:</p>

        <p><b><a target="_blank" href="http://js.devexpress.com/Documentation/ApiReference/Data_Visualization_Widgets/dxPieChart/Series_Types/DoughnutSeries/">Doughnut</a> and <a target="_blank" href="http://chartjs.devexpress.com/Documentation/ApiReference/dxChart/Series_Types/BarSeries">Bar</a> Charts</b> - used to compare revenues generated by each product.</p>

        <p><a target="_blank" href="http://js.devexpress.com/Documentation/ApiReference/Data_Visualization_Widgets/dxRangeSelector/"><b>Range Control</b></a> – used to visually specify date range parameters. A line chart within the widget illustrates sales patterns over time.</p>  

    }
}